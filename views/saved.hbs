
<nav class="navbar navbar-white bg-white sticky-top">
    <img src="./images/logo5.png" style="height:60px" id="logo">


    <div id="mySidenav" class="sidenav">
        <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
        <a href="/form">New Search</a> <!--ADD LINK-->
        <a href="/savedSearches">Saved Searches</a> <!--ADD LINK-->
        <a href="/logout">Log Out</a> <!--ADD LINK-->
